@page
@model IndexModel
@{

    var botName = Loc["Header"];
    var botLink = "https://t.me/YN_AntispamBot";
    var botOwner = "https://t.me/EvgenyYushko";

    ViewData["Title"] = botName;
}
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Loc

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center py-4">
            <h1 class="display-5">🤖 @botName</h1>
            <p class="mb-0">@Loc["Header1"]</p>
        </div>
        <div class="card-body">
            <h3 class="text-center mb-4">📚 @Loc["Description"]</h3>
            <p>@Loc["Description_Text"]</p>
            <hr />
            <h3 class="text-center mb-4">✨ @Loc["Possibilities"]</h3>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">🚫 @Loc["Delete"]</li>
                <li class="list-group-item">🚫 @Loc["Delete_Text"]</li>
                <li class="list-group-item">✅ @Loc["White"]</li>
                <li class="list-group-item">📋 @Loc["White_Text"]</li>
                <li class="list-group-item">🔒 @Loc["Disables"]</li>
                <li class="list-group-item">✅ @Loc["Hellow_Text"]</li>
            </ul>
            <hr />
            <h3 class="text-center mb-4">🚀 @Loc["Quick_start"]</h3>
            <p>@Loc["Instructions"]</p>
            <ol class="list-group list-group-numbered">
                <li class="list-group-item">
                    @Loc["Instructions_1"]<a href="@botLink" target="_blank">@botName</a>
                </li>
                <li class="list-group-item">@Loc["Instructions_2"]</li>
                <li class="list-group-item">@Loc["Instructions_3"]</li>
                <li class="list-group-item">@Loc["Instructions_4"]</li>
                <li class="list-group-item">@Loc["Instructions_5"]</li>
            </ol>
            <hr />
            <h3 class="text-center mb-4">🔒 @Loc["Settings"]</h3>
            <ol class="list-group list-group-numbered">
                <li class="list-group-item">@Loc["Settings_1"]</li>
                <li class="list-group-item">@Loc["Settings_2"]</li>
                <li class="list-group-item">@Loc["Settings_3"]</li>
            </ol>
            <h3 class="text-center mb-4">🔗 @Loc["Useful_links"]</h3>
            <div class="d-flex justify-content-center gap-4">
                <a class="btn btn-primary" href="https://core.telegram.org/bots/api" target="_blank">Telegram API</a>
                <a class="btn btn-secondary" href="https://docs.microsoft.com/aspnet/core" target="_blank">ASP.NET Core Docs</a>
            </div>
        </div>
    </div>
</div>
