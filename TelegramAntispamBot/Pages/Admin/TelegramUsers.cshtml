@page
@using Microsoft.AspNetCore.Mvc.Localization
@model TelegramUsersModel
@{
	Layout = "~/Pages/Shared/_Layout.cshtml";
}
@inject IViewLocalizer Loc

<style>
	/* Специфичные стили только для этой страницы */
	.tg-user-row {
		display: flex;
		align-items: center;
		padding: 12px 16px;
		border-bottom: 1px solid var(--tg-border-color);
		cursor: pointer;
	}

		.tg-user-row:hover {
			background-color: rgba(255, 255, 255, 0.05);
		}

	.tg-user-name {
		flex-grow: 1;
	}
</style>

<div class="tg-container">
	<div class="tg-header">
		<h1>@Loc["PageName"]</h1>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">@Loc["UsersList"]</h3>
		<div class="tg-button-grid">
			@foreach (var user in Model.TelegramUsers)
			{
				<div class="tg-user-row" onclick="goToUser(@user.UserId, null)">
					<span class="tg-user-name">@user.Name</span>
				</div>
			}
		</div>
	</div>
</div>

<script>
	function goToUser(userId, chatId) {
		window.location.href = '/TelegramUserProfile?userId=' + userId +'&chatId='+ chatId;
	}
</script>