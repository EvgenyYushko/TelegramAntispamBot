@page
@model AllUsersModel
@{
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
	/* Специфичные стили только для этой страницы */
	.tg-user-card {
		display: flex;
		flex-direction: column;
		padding: 12px 16px;
		border-bottom: 1px solid var(--tg-border-color);
	}

	.tg-user-info {
		display: flex;
		justify-content: space-between;
		margin-bottom: 8px;
	}

	.tg-user-name {
		font-weight: 500;
		color: var(--tg-primary-color);
	}

	.tg-user-email {
		color: var(--tg-text-color);
		font-size: 14px;
	}

	.tg-user-roles {
		color: var(--tg-hint-color);
		font-size: 13px;
	}
</style>

<div class="tg-container">
	<div class="tg-header">
		<h1>Users Management</h1>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">Registered Users</h3>
		<div class="tg-button-grid">
			@foreach (var user in Model.UsersAccount)
			{
				<div class="tg-user-card">
					<div class="tg-user-info">
						<span class="tg-user-name">@user.UserName</span>
						<span class="tg-user-email">@user.Email</span>
					</div>
					<div class="tg-user-roles">
						Roles: @string.Join(", ", user.Roles.FirstOrDefault())
					</div>
				</div>
			}
		</div>
	</div>
</div>