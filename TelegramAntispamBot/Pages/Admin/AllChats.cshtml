@page
@model AllChatsModel
@{
	Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
	/* Специфичные стили только для этой страницы */
	.tg-chat-card {
		display: flex;
		flex-direction: column;
		padding: 12px 16px;
		border-bottom: 1px solid var(--tg-border-color);
		cursor: pointer;
	}

		.tg-chat-card:hover {
			background-color: rgba(255, 255, 255, 0.05);
		}

	.tg-chat-title {
		font-weight: 500;
		color: var(--tg-primary-color);
		margin-bottom: 4px;
	}

	.tg-chat-meta {
		display: flex;
		justify-content: space-between;
		color: var(--tg-hint-color);
		font-size: 13px;
	}
</style>

<script>
	function goToChat(chatId) {
		window.location.href = '/ChatProfile?chatId=' + chatId;
	}
</script>

<div class="tg-container">
	<div class="tg-header">
		<h1>Chats Management</h1>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">Active Chats</h3>
		<div class="tg-button-grid">
			@foreach (var chat in Model.Chats)
			{
				<div class="tg-chat-card" onclick="goToChat(@chat.TelegramChatId)">
					<div class="tg-chat-title">@chat.Title</div>
					<div class="tg-chat-meta">
						<span>@chat.ChatType</span>
						<span>Created by: @chat.Creator.Name</span>
					</div>
				</div>
			}
		</div>
	</div>
</div>