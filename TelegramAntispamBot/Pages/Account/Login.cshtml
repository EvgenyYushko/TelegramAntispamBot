@page
@using Microsoft.AspNetCore.Mvc.Localization
@model LoginModel
@{
	Layout = "~/Pages/Shared/_Layout.cshtml";
}
@inject IViewLocalizer Loc

<style>
	/* Специфичные стили для страницы входа */
	.tg-login-form {
		max-width: 400px;
		margin: 0 auto;
	}

	.tg-form-input {
		width: 100%;
		padding: 12px 16px;
		margin-bottom: 16px;
		background-color: var(--tg-secondary-bg);
		border: 1px solid var(--tg-border-color);
		border-radius: 8px;
		color: var(--tg-text-color);
	}

	.tg-form-label {
		display: block;
		margin-bottom: 8px;
		color: var(--tg-hint-color);
		font-size: 14px;
	}

	.tg-login-btn {
		width: 100%;
		padding: 12px;
		background-color: var(--tg-primary-color);
		color: white;
		border: none;
		border-radius: 8px;
		font-weight: 500;
		cursor: pointer;
		transition: opacity 0.2s;
	}

		.tg-login-btn:hover {
			opacity: 0.9;
		}

	.tg-register-link {
		color: var(--tg-primary-color);
		text-decoration: none;
	}

		.tg-register-link:hover {
			text-decoration: underline;
		}

	.tg-social-btn {
		width: 100%;
		padding: 12px;
		margin-bottom: 12px;
		border-radius: 8px;
		border: none;
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 10px;
		font-weight: 500;
		cursor: pointer;
		transition: opacity 0.2s;
	}

		.tg-social-btn:hover {
			opacity: 0.9;
		}

	.tg-google-btn {
		background-color: white;
		color: #5f6368;
		border: 1px solid var(--tg-border-color);
	}

	.tg-vk-btn {
		background-color: #0077FF;
		color: white;
	}

	.tg-text-center {
		text-align: center;
		margin-top: 20px;
	}
</style>

<div class="tg-container">
	<div class="tg-card">
		<h3 class="tg-card-title">@Loc["Welcome"]</h3>

		<form method="post" asp-page-handler="Login" class="tg-login-form">
			<div>
				<label for="UserName" class="tg-form-label">@Loc["Email"]</label>
				<input type="text" id="UserName" name="UserName" class="tg-form-input" placeholder="@Loc["Input_Email"]" required>
			</div>
			<div>
				<label for="Password" class="tg-form-label">@Loc["Password"]</label>
				<input type="password" id="Password" name="Password" class="tg-form-input" placeholder="@Loc["Enter_Password"]" required>
			</div>

			<div asp-validation-summary="All" class="tg-error-summary"></div>

			<button type="submit" class="tg-login-btn">@Loc["Login"]</button>
		</form>

		<div class="tg-text-center" style="margin-top: 20px; text-align: center;">
			<p>
				@Loc["have't_account"] <a href="/Account/Register" class="tg-register-link">@Loc["Register_here"]</a>
			</p>
		</div>

		<!-- Блок социальных логинов -->
		<div class="tg-social-auth">
			@await Html.PartialAsync("_ExternalLoginButtons")
		</div>
	</div>
</div>