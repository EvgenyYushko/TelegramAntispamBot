			<input type="hidden" name="returnUrl" value="@returnUrl" />
			<button type="submit" name="provider" value="Vkontakte" class="tg-social-btn">
				<svg class="tg-social-icon" viewBox="0 0 24 24">
					<path fill="#0077FF" d="M12.7 18.29c-5.17 0-8.02-3.5-8.2-9.42h2.91c.09 4.19 1.93 5.96 3.86 6.26V8.87h2.76v3.67c1.9-.19 3.82-1.86 4.47-3.67h2.76c-.64 2.85-2.91 4.96-4.85 5.73 1.94.59 4.36 2.15 5.42 4.69h-3.19c-.82-1.62-2.63-2.83-5.14-3.01v3.01h-.33z" />
