@{
    ViewData["Title"] = "Manage Connected Accounts";
    var returnUrl = Context.Request.Query.TryGetValue("ReturnUrl", out var returnUrlParam)
        ? returnUrlParam.ToString()
        : "/User/Profile";
}

<style>

    .social-buttons-container {
        display: flex;
        gap: 12px;
        margin-top: 16px;
        flex-wrap: nowrap;
        width: 100%; /* Добавлено */
    }

    .social-signin-btn {
        flex: 1 1 0; /* Равномерное распределение */
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 8px;
        height: 40px;
        min-width: 40px; /* Минимальная ширина */
        width: 100%;
        box-sizing: border-box;
        border: 1px solid transparent; /* Добавить если нужно */
    }

    .microsoft-btn svg {
        width: 24px !important; /* Явное указание размера */
        height: 24px !important;
    }

</style>

<div class="social-auth-section">
    <div class="d-flex align-items-center mb-4">
        <hr class="flex-grow-1">
        <span class="mx-3 text-muted">Другие способы входа</span>
        <hr class="flex-grow-1">
    </div>
    <div class="social-buttons-container">
        <form method="post" asp-page-handler="ExternalLogin" class="w-100">
            <input type="hidden" name="returnUrl" value="@returnUrl"/>
            <button type="submit"
                    name="provider"
                    value="Google"
                    class="btn social-signin-btn google-signin-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24">
                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
                </svg>
            </button>
        </form>
        <form method="post" asp-page-handler="ExternalLogin" class="w-100">
            <input type="hidden" name="returnUrl" value="@returnUrl"/>
            <button type="submit"
                    name="provider"
                    value="Vkontakte"
                    class="btn social-signin-btn vk-signin-btn">
                <img src="https://upload.wikimedia.org/wikipedia/commons/2/21/VK.com-logo.svg"
                     alt="VK"
                     width="24"
                     height="24">
            </button>
        </form>

        <form method="post" asp-page-handler="ExternalLogin" class="w-100">
            <input type="hidden" name="returnUrl" value="@returnUrl"/>
            <button type="submit"
                    name="provider"
                    value="GitHub"
                    class="btn social-signin-btn github-signin-btn">
                <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png"
                     alt="GitHub"
                     width="24"
                     height="24">
            </button>
        </form>

        <form method="post" asp-page-handler="ExternalLogin" class="w-100">
            <input type="hidden" name="returnUrl" value="@returnUrl"/>
            <button type="submit"
                    name="provider"
                    value="MailRu"
                    class="btn social-signin-btn mailru-signin-btn">
                <img src="/images/logo-mailru.jpg"
                     alt="Mail.ru"
                     width="45"
                     height="35"/>
            </button>
        </form>

        <form method="post" asp-page-handler="ExternalLogin" class="w-100">
            <!-- Добавлен класс w-100 -->
            <input type="hidden" name="returnUrl" value="@returnUrl"/>
            <button type="submit"
                    name="provider"
                    value="Microsoft"
                    class="btn social-signin-btn microsoft-btn">
                <svg xmlns="http://www.w3.org/2000/svg" width="21" height="21" viewBox="0 0 21 21">
                    <path fill="#f25022" d="M1 1h9v9H1z"/>
                    <path fill="#00a4ef" d="M1 11h9v9H1z"/>
                    <path fill="#7fba00" d="M11 1h9v9h-9z"/>
                    <path fill="#ffb900" d="M11 11h9v9h-9z"/>
                </svg>
            </button>
        </form>
    </div>
</div>