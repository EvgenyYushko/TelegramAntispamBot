@{
	ViewData["Title"] = "Manage Connected Accounts";
	var returnUrl = Context.Request.Query.TryGetValue("ReturnUrl", out var returnUrlParam)
		? returnUrlParam.ToString()
		: "/User/Profile";
}

<style>
	.tg-social-auth {
		margin-top: 24px;
	}

	.tg-social-divider {
		display: flex;
		align-items: center;
		margin: 16px 0;
		color: var(--tg-hint-color);
		font-size: 14px;
	}

		.tg-social-divider::before,
		.tg-social-divider::after {
			content: "";
			flex: 1;
			border-bottom: 1px solid var(--tg-border-color);
		}

		.tg-social-divider::before {
			margin-right: 12px;
		}

		.tg-social-divider::after {
			margin-left: 12px;
		}

	.tg-social-buttons {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(40px, max-content));
		gap: 8px;
		justify-content: center;
	}

	.tg-social-btn {
		width: 40px;
		height: 40px;
		padding: 8px;
		border-radius: 8px;
		border: none;
		background-color: var(--tg-secondary-bg);
		display: flex;
		align-items: center;
		justify-content: center;
		cursor: pointer;
		transition: background-color 0.2s;
	}

		.tg-social-btn:hover {
			background-color: rgba(255, 255, 255, 0.1);
		}

		.tg-social-btn.github svg path {
			fill: #ffffff;
			filter: drop-shadow(0 0 1px rgba(0,0,0,0.5));
		}

		.tg-social-btn.mailru svg path {
			fill: #ffcd00;
		}

			.tg-social-btn.mailru svg path:first-child {
				fill: #005ff8;
			}
</style>

<div class="tg-social-auth">
	<div class="tg-social-divider">
		Другие способы входа
	</div>

	<div class="tg-social-buttons">
		<!-- Google -->
		<form method="post" asp-page-handler="ExternalLogin">
			<input type="hidden" name="returnUrl" value="@returnUrl" />
			<button type="submit" name="provider" value="Google" class="tg-social-btn">
