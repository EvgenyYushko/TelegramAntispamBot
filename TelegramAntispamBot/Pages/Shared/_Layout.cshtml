<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Основной контейнер для страницы */
        html, body {
            height: 100%; /* Заполнение всей высоты экрана */
            margin: 0;
        }

        /* Контейнер для всего содержимого */
        .page-container {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Высота всей страницы */
        }

        /* Основное содержимое */
        main {
            flex: 1; /* Заполняет всё пространство между хедером и футером */
        }

        /* Стили футера */
        footer {
            background-color: #f8f9fa;
            text-align: center;
            padding: 15px 0;
        }
    </style>
</head>
<body>
    <div class="page-container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">Антиспам бот</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Главная</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/privacy">Политики конфиденциальности</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">Аккаунт</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2024 - Антиспам бот - <a asp-area="" asp-page="/Privacy">Политики конфиденциальности</a>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-S7W8HPXKEK"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());
        gtag('config', 'G-S7W8HPXKEK');
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
