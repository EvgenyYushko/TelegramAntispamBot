@page
@using Microsoft.AspNetCore.Mvc.Localization
@model PrivacyModel
@{
	var msg = Loc["Privacy_Policy"];
	ViewData["Title"] = msg;
	var botOwner = "https://t.me/EvgenyYushko";
}
@inject IViewLocalizer Loc

<style>
	/* Специфичные стили для страницы приватности */
	.tg-privacy-item {
		display: flex;
		align-items: flex-start;
		padding: 12px 16px;
		border-bottom: 1px solid var(--tg-border-color);
		gap: 12px;
	}

	.tg-privacy-icon {
		font-size: 1.2em;
		flex-shrink: 0;
	}

	.tg-contact-link {
		color: var(--tg-primary-color);
		text-decoration: none;
	}

		.tg-contact-link:hover {
			text-decoration: underline;
		}
</style>

<div class="tg-container">
	<div class="tg-header">
		<h1>🔒 @msg</h1>
		<p>@Loc["Data_Safe"]</p>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">📜 @Loc["Provisions"]</h3>
		<p>@Loc["We_Respect"]</p>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">📂 @Loc["Collect"]</h3>
		<div class="tg-button-grid">
			<div class="tg-privacy-item">
				<span class="tg-privacy-icon">🧾</span>
				<span>@Loc["Username"]</span>
			</div>
			<div class="tg-privacy-item">
				<span class="tg-privacy-icon">💬</span>
				<span>@Loc["Contents"]</span>
			</div>
			<div class="tg-privacy-item">
				<span class="tg-privacy-icon">🌐</span>
				<span>@Loc["Metadata"]</span>
			</div>
		</div>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">🛡️ @Loc["How_Protect"]</h3>
		<p>@Loc["All_Data"]</p>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">📤 @Loc["Transfer"]</h3>
		<p>@Loc["Your_Data"]</p>
	</div>

	<div class="tg-card">
		<h3 class="tg-card-title">📞 @Loc["Contacts"]</h3>
		<p>@Loc["Questions"] <a href="@botOwner" class="tg-contact-link" target="_blank">@Loc["Contact_Us"]</a></p>
	</div>
</div>