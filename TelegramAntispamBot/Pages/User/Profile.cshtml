@page
@model TelegramAntispamBot.Pages.User.ProfileModel
@{ Layout = "~/Pages/Shared/_Layout.cshtml";
    var user = Model.CurrentUser; }

@using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Loc

<style>
    .header {
        text-align: center;
        margin-bottom: 20px;
    }

        .header h1 {
            font-size: 2rem;
            color: #333;
            margin: 0;
        }

        .header p {
            font-size: 1rem;
            color: #555;
        }

    .profile-details {
        display: flex;
        flex-direction: column;
        gap: 15px;
        padding: 10px 0;
    }

    .profile-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background: #f9f9f9;
    }

        .profile-item span {
            font-size: 1rem;
            color: #333;
        }

            .profile-item span.label {
                font-weight: bold;
            }

    .logout-container {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .logout-button {
        padding: 15px 25px;
        font-size: 18px;
        font-weight: bold;
        cursor: pointer;
        border: none;
        background-color: #dc3545;
        color: white;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
        box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
    }

        .logout-button:hover {
            background-color: #c82333;
            transform: translateY(-2px);
        }

        .logout-button:active {
            background-color: #a71d2a;
            transform: translateY(0);
        }

    .button-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 15px;
        margin-top: 20px;
    }

    .admin-button {
        flex: 1;
        min-width: 200px;
        max-width: 300px;
        padding: 15px 25px;
        font-size: 18px;
        font-weight: bold;
        text-decoration: none;
        text-align: center;
        border: none;
        background-color: #28a745;
        color: white;
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
        box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
    }

        .admin-button:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }

        .admin-button:active {
            background-color: #196f3d;
            transform: translateY(0);
        }
</style>

<div class="container">
    <div class="header">
        <h1>@Loc["Welcome"] @user.UserName!</h1>
        <p>@Loc["Your_Profile"]</p>
    </div>

    <div class="profile-details">
        <div class="profile-item">
            <span class="label">@Loc["Username"]</span>
            <span>@user.UserName</span>
        </div>
        <div class="profile-item">
            <span class="label">@Loc["Email"]</span>
            <span>@user.Email</span>
        </div>
        <div class="profile-item">
            <span class="label">@Loc["Roles"]</span>
            <span>@string.Join(", ", user.Roles.First())</span>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div policy="Admin" class="button-container">
            <a href="/Admin/Analytics" class="admin-button">@Loc["Site_Statistics"]</a>
            <a href="/Admin/TelegramUsers" class="admin-button">@Loc["TgUsers"]</a>
        </div>
    }
    <div class="logout-container">
        <button class="logout-button" onclick="location.href='@Url.Page("/Account/Logout")'">
            @Loc["Log_Out"]
        </button>
    </div>
</div>
